{
  "apps" : [{
    "name"        : "ohif-viewer",
    "script"      : "main.js",
    "watch"       : true,
    "merge_logs"  : true,
    "cwd"         : "/app/bundle/",
    "env": {
    	"METEOR_SETTINGS": {
		  "servers": {
		    "dicomWeb": [
		      {
		        "name": "Orthanc",
		        "wadoUriRoot": "http://server:8042/wado",
		        "qidoRoot": "http://server:8042/dicom-web",
		        "wadoRoot": "http://server:8042/dicom-web",
		        "qidoSupportsIncludeField": false,
		        "imageRendering": "wadouri",
		        "thumbnailRendering": "wadors",
		        "requestOptions": {
		          "auth": "orthanc:orthanc",
		          "logRequests": true,
		          "logResponses": false,
		          "logTiming": true
		        }
		      }
		    ]
		  },
		  "defaultServiceType": "dicomWeb",
		  "public": {},
		  "proxy": {
		    "enabled": true
		  }
		}
    }
  }]
}
